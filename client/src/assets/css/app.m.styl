// ------------ A.app ------------
.app-page
  display: flex
  flex-direction: column
  min-height: 100vh

.app-main
  width: 100%
  padding-top: var(--header-height + 20px)
  display: flex
  flex: 1 1 auto
  overflow: hidden
  position: relative
  transition: all 0.5s cubic-bezier(0.55, 0, 0.1, 1)

.app-content
  flex: 1 1 auto
  margin: 1rem

.app-footer
  display: flex
  justify-content: center