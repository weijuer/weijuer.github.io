@import "../core/vars"

.app-layout
  display: flex
  flex-direction: column
  min-height: 100vh

  .app-header
    margin: 0
    padding: 0
    height: $header-height + 0px
    position: fixed
    left: 0
    right: 0
    z-index: 2
    flex-shrink: 0
    box-shadow: 0 0 1px #9da5ab
    transition: all 0.5s 0.2s

    .app-header-content
      padding: 10px 0
      display: flex
      align-items: center
      justify-content: space-between

      .app-header-nav
        .menu-link
          color: #7b7b7b

    .app-header-logo
      height: 60px

      .logo
        height: 100%
        display: flex
        align-items: center
        filter: hue-rotate(140deg)

        .logo-img
          width: 60px

  .app-main
    flex: 1 1 auto
    padding: ($header-height + 20px) 0 20px

  .app-footer
    background: #fff
    box-shadow: 0 0 1px #9da5ab

    .app-footer-content
      padding: 1rem 0
      display: flex
      align-items: center
      justify-content: space-between

      .app-footer-logo
        color: #7b7b7b

        .logo-letter
          color: #7b7b7b

      .app-header-section
        display: flex

// nav
.menu-nav
  display: flex
  margin: 0
  padding: 0
  list-style: none

  > li
    display: flex
    align-items: center
    padding: 0 0.25rem

    .menu-link
      border-radius: 0.25rem
      padding: 0.5rem 0.875rem
      color: #7b7b7b

      &:hover
        background: #e8e8e8