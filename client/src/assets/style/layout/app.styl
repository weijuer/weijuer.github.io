@import "../core/vars"

.app-layout
    display: flex
    flex-direction: column
    min-height: 100vh

    .app-header
        margin: 0
        padding: 0
        height: $header-height + 0px
        position: fixed
        left: 0
        right: 0
        z-index: 2
        flex-shrink: 0
        box-shadow: 0 0 2.25rem #9da5ab
        transition: all 0.5s 0.2s

        .app-header-content
            display: flex
            justify-content: space-between

        .app-header-logo
            width: 45px
            height: 45px

    .app-main
        flex: 1 1 auto
        padding: ($header-height + 20px) 0 20px

    .app-footer
        background: #000

        .app-footer-content
            padding: 1rem 0
            display: flex
            justify-content: space-between

            .app-header-section
                display: flex

// nav
.menu-nav
    display: flex
    margin: 0
    padding: 0
    list-style: none

    > li
        display: flex
        align-items: center
        padding: 0 0.25rem

        .menu-link
            border-radius: 0.25rem
            padding: 0.5rem 0.875rem