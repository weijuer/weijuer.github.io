{
  "name": "server",
  "version": "1.0.0",
  "description": "server",
  "main": "index.js",
  "author": "Weijuer",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "tsc && node dist/spider/blog-spider.js",
    "watch-server": "nodemon --watch 'src/**/*' -e ts,tsx --exec 'ts-node' ./src/server.ts",
    "start-serve": "npm run serve",
    "serve": "node dist/server.js",
    "build": "npm run tslint && npm run build-ts",
    "build-ts": "tsc",
    "watch": "npm run tslint && npm run watch-ts",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "devDependencies": {
    "@types/koa": "^2.0.49",
    "@types/koa-router": "^7.0.42",
    "@types/puppeteer-core": "^1.9.0",
    "fs": "^0.0.1-security",
    "nodemon": "^1.19.1",
    "puppeteer-core": "^1.18.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "koa": "^2.7.0",
    "koa-router": "^7.4.0"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/*",
      ".git"
    ],
    "delay": "2500",
    "watch": [
      "./dist/*-spider.js"
    ],
    "stdout": true
  }
}
