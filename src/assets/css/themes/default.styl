@import "../core/vars";

.default {

  a:not(.btn) {
    color: #333;

    &:not(.btn):hover {
      color: $themeColor;
    }
  }

  .app-main {
    
  }

  .app-footer {
    background: rgba(0, 0, 0, 0.7);
    color: #fff;
  }

  .app-header-bar.app-header-bar--menu {
    background: rgba(30, 36, 42, 0.8);

    .menu-section .nav > li {
      .nav-link {
        color: #fff;

        &:hover {
          color: $themeColor;
        }
      }

      &.active {
        .nav-link {
          color: $themeColor;
        }
      }
    }
  }
}

@media all and (max-width: 768px) {
  .default {
    .menu-section.active {
      background: rgba(30, 36, 42, 0.8);
    }
  }
}
